<UserControl x:Class="Bornander.UI.Test.Stocks.StockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:f="clr-namespace:Bornander.UI;assembly=Bornander.UI"
             xmlns:l="clr-namespace:Bornander.UI.Test.Stocks"
             mc:Ignorable="d" 
             d:DesignHeight="128" d:DesignWidth="300">
    <f:FlipPanel x:Name="flipper" SpinAxis="Vertical" Background="Gray" PreviewMouseLeftButtonDown="FlipPanel_PreviewMouseLeftButtonDown">
        <f:FlipPanel.Front>
            <l:SymbolView DataContext="{Binding}"/>
        </f:FlipPanel.Front>
        <f:FlipPanel.Back>
            <l:SymbolHistory DataContext="{Binding}"/>
        </f:FlipPanel.Back>
    </f:FlipPanel>
</UserControl>

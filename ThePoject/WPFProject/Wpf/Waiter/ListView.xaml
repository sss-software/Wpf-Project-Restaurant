<UserControl x:Class="Wpf.Waiter.ListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:Wpf.Waiter">    
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding Orders}" DisplayMemberPath="OrderID" SelectedItem="{Binding CurrentOrder,Mode=TwoWay}"/>
        <StackPanel Grid.Row="1">
            <Button Content="Add New" Command="{Binding Path=AddOrderCmd, Mode=OneWay}"/>
            <Button  Grid.Column="1" Content=" Delete Selected " IsEnabled="{Binding CanDelete}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <local:CommandTrigger Command="Delete"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
